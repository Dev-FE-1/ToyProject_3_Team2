{
  "compilerOptions": {
    "composite": true, // 프로젝트 참조를 위한 설정
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo", // 증분 빌드 정보를 저장할 위치를 지정
    "skipLibCheck": true,
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true, // 기본 내보내기가 없는 모듈에서도 기본 import를 허용
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",

    /* Linting */
    "strict": true,
    "noEmit": true
  },
  "include": ["vite.config.ts"]
}
